.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        span.ion-cube
      form.navbar-form.navbar-left(role="search")
        .form-group
          select#search-box.form-control(type="text", placeholder="Recherche")
            option(value="")
            optgroup(label="Nationalité")
              option(value="canadienne") Canadienne
              option(value="asiatique") Asiatique
              option(value="américaine") Américaine
              option(value="mexicaine") Mexicaine
              option(value="italienne") Italienne
            optgroup(label="Catégories")
              option(value="restauration rapide") Restauration rapide
              option(value="brasserie") Brasserie
              option(value="bonne table") Bonne table
              option(value="bistro") Bistro
              option(value="familiale") Familiale
            optgroup(label="Restaurants")
              option(value="auguste") Auguste
              option(value="le bouchon") Le bouchon
              option(value="ochevreuil") O Chevreuil
              option(value="kapzak") Bistro Kapzak
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account')
                  span.ion-person
                  | My Account
              li.divider
              li
                a(href='/logout')
                  span.ion-log-out
                  |  Logout